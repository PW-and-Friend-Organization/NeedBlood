<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
	    <layer-list>
		    <item>
		        <shape>
		            <gradient
		                android:endColor="#F20000"
		                android:startColor="#B50404"
		                android:angle="270" />
		            <stroke
		                android:width="3dp"
		                android:color="#CFCFCF" />
		            <corners
		                android:radius="3dp" />
		            <padding
		                android:left="10dp"
		                android:top="10dp"
		                android:right="10dp"
		                android:bottom="10dp" />
		        </shape>
		    </item>
		    <item>
		        <bitmap android:src="@drawable/fb_icon2" android:gravity="left"/>
		        <scale android:scaleWidth="100%" />
		    </item>
	    </layer-list>
	</item>
	
    <item android:state_focused="true">
	    <layer-list>
		    <item>
		        <shape>
		            <gradient
		                android:endColor="#F20000"
		                android:startColor="#B50404"
		                android:angle="270" />
		            <stroke
		                android:width="3dp"
		                android:color="#CFCFCF" />
		            <corners
		                android:radius="3dp" />
		            <padding
		                android:left="10dp"
		                android:top="10dp"
		                android:right="10dp"
		                android:bottom="10dp" />
		        </shape>
		    </item>
		    <item>
		        <bitmap android:src="@drawable/fb_icon2" android:gravity="left"/>
		        <scale android:scaleWidth="100%" />
		    </item>
	    </layer-list>
	</item>
	
    <item>
	    <layer-list>
		    <item>
		        <shape>
		            <gradient
		                android:endColor="#A10000"
		                android:startColor="#730000"
		                android:angle="270" />
		            <stroke
		                android:width="3dp"
		                android:color="#CFCFCF" />
		            <corners
		                android:radius="3dp" />
		            <padding
		                android:left="10dp"
		                android:top="10dp"
		                android:right="10dp"
		                android:bottom="10dp" />
		        </shape>
		    </item>
		    <item>
		        <bitmap android:src="@drawable/fb_icon2" android:gravity="left"/>
		        <scale android:scaleWidth="100%" />
		    </item>
		</layer-list>
	</item>
	     
</selector>